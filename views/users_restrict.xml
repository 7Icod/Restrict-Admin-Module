<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="restrict_admin_inherit" model="ir.ui.view">
            <field name="name">restrict_admin</field>
            <field name="model">res.groups</field>
            <field name="inherit_id" ref="base.view_groups_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Restrict Admin">
                        <tree>
                            <field name="hide_menu_access_ids" options="{'no_create':1, 'no_open': True, 'no_create_edit':1}"/>
                        </tree>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>